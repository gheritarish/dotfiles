[core]
    editor = emacsclient -c
    pager = delta
    excludesfile = ~/.gitignore

# To remember it, but to configure by repo, as all of them won't have this file
[blame]
    ignoreRevsFile = .git-blame-ignore-revs

[alias]
    assume = update-index --assume-unchanged
    assumed = "!git ls-files -v | grep ^h | cut -c 3-"
    unassume = update-index --no-assume-unchanged

[delta]
    navigate = true  # use n and N to move between diff sections
    light = false    # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    side-by-side = true
    line-numbers = true
    file-decoration-style = "#689d6a" box
    file-style = "#689d6a" box
    hunk-header-decoration-style = "#b16286" ul
    minus-style = "#cc241d"
    plus-style = "#98971a"
    syntax-theme = gruvbox-dark

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true
[scalar]
	repo = /home/telmar/Documents/Code/padam-dispatch
	repo = /home/telmar/Documents/Code/padam-qa-orchestrator
	repo = /home/telmar/Documents/Code/padam-k8s

[column]
    ui = auto
[branch]
    sort = -committerdate
[tag]
    sort = version:refname
[init]
    defaultBranch = main
[push]
    default = simple
    autoSetupRemote = true
    followTags = true
[fetch]
    prune = true
    pruneTags = true
    all = true
[help]
    autocorrect = prompt
[rerere]
    enabled = true
    autoupdate = true
[pull]
    rebase = true
[rebase]
    autoSquash = true
    autoStash = true
